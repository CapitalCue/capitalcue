# CapitalCue API Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/capitalcue_dev"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION="1.0.0"

# CORS
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_PATH="./uploads"

# External Services
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Email (optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@capitalcue.com"

# Logging
LOG_LEVEL="info"

# Cache/Redis (optional)
REDIS_URL=""