# Production Environment Configuration
# Copy this file to .env and update values for your production environment

# Database Configuration
DATABASE_NAME=financial_analyzer
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-postgres-password
DATABASE_HOST=postgres
DATABASE_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Application Secrets
JWT_SECRET=your-super-secure-jwt-secret-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Port Configuration
API_PORT=3001
WEB_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# MCP Services Ports
DOCUMENT_PARSER_PORT=8001
CONSTRAINT_ENGINE_PORT=8002
ALERT_MANAGER_PORT=8003
AI_ANALYZER_PORT=8004

# File Upload Configuration
MAX_FILE_SIZE=52428800

# Logging
LOG_LEVEL=info

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost

# SSL Configuration (uncomment if using HTTPS)
# SSL_CERT_PATH=./docker/nginx/ssl/cert.pem
# SSL_KEY_PATH=./docker/nginx/ssl/key.pem